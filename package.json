{
  "name": "champions",
  "version": "3.0.0",
  "description": "Contest of Champions Companion App",
  "main": "index.html",
  "scripts": {
    "start": "npx webpack serve --config ./dev/config/webpack-config-dev.js",
    "lint:src": "./node_modules/.bin/eslint ./src/",
    "lint:dev": "./node_modules/.bin/eslint ./dev/",
    "lint:test": "./node_modules/.bin/eslint ./test/**/**/*.*js*",
    "lint:sass": "stylelint '**/*.scss'",
    "lint:fix": "npm run lint:src -- --fix && npm run lint:dev -- --fix && npm run lint:test -- --fix && npm run lint:sass -- --fix ",
    "lint": "npm run lint:src && npm run lint:dev && npm run lint:test && npm run lint:sass",
    "test:all": "npm run test:node && npm run test:scripts",
    "test:node": "instant-mocha --webpack-config dev/config/webpack-config-test.js --require test/test-setup.js test/**/*.js*",
    "test:scripts": "mocha --loader=testdouble --require test/test-champion-update-setup.mjs 'test/script/**/**/*.*js*'",
    "test:scripts-single": "mocha --loader=testdouble --require test/test-champion-update-setup.mjs 'test/script/**/*.*js*' --grep ",
    "update-champions": "node dev/script/update-champions.mjs",
    "test": "npm run lint && npm run test:all",
    "deploy": "npx webpack build --config ./dev/config/webpack-config.js && ./dev/script/deploy.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriel-hook/contest-of-champions.git"
  },
  "keywords": [
    "mcoc",
    "contest",
    "champions",
    "synergies",
    "team",
    "builder"
  ],
  "author": "Gabriel Hook",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/hook/champions/issues"
  },
  "homepage": "https://github.com/hook/champions#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.5",
    "@babel/plugin-proposal-export-default-from": "^7.22.5",
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/plugin-transform-react-constant-elements": "^7.22.5",
    "@babel/plugin-transform-react-jsx": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "chai": "^4.3.7",
    "cheerio": "^1.0.0-rc.12",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.31.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "instant-mocha": "^1.5.1",
    "jsdom": "^22.1.0",
    "less": "^4.1.3",
    "mini-css-extract-plugin": "^2.7.6",
    "mithril-query": "^0.9.3",
    "mocha": "^10.2.0",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "puppeteer": "^20.7.2",
    "sass-loader": "^13.3.2",
    "stylelint": "^15.8.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-scss": "^5.0.1",
    "testdouble": "^3.18.0",
    "testdouble-chai": "^0.5.0",
    "url-loader": "^4.1.1",
    "webfonts-loader": "^8.0.1",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "classnames": "^2.3.2",
    "deep-equal": "^2.2.1",
    "director": "^1.2.8",
    "mithril": "^0.2.5"
  }
}
